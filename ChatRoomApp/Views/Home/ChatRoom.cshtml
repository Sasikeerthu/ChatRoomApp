@{
    Layout = null;
}
@model IEnumerable<ChatRoomApp.Models.Message>
<head>
    <link href="~/css/button.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <form id="messageForm" method="post" action="/Home/SendMessage">
        <div class="d-flex align-content-center justify-content-center" align="center">
            <div class="card" id="rad">
                <div class="d-flex flex-row-reverse">
                    <a type="button" class="btn btn-outline-danger p-2" href="SignIn_To_ChatRoom">LogOut</a>
                </div>
                <div class="card-body" id="messageList">
                    @foreach (var message in Model)
                    {
                        <div class="message">
                            <strong>@message.SenderName</strong> - @message.Timestamp.ToString("yyyy-MM-dd HH:mm:ss"): @message.Content
                        </div>
                    }
                </div>
                <div class="form-group">
                    <input type="text" class="form-control input-message" id="Content" name="Content" placeholder="Type your message here..." />
                    <br />
                    <button type="submit" class="button-85"><i class="fa-solid fa-share"></i></button>
                </div>
            </div>
        </div>
    </form>

    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            function scrollToBottom() {
                $('#messageList').scrollTop($('#messageList')[0].scrollHeight);
            }

            // Scroll to bottom on page load
            scrollToBottom();

        });
    </script>
</body>
